<% include partials/header %>
<% include lib/functions %>

<% var count = 0 %> 

<link rel="stylesheet" href="/stylesheets/workout.css">
<div class="form-row justify-content-center pt-5">
    <a class="btn btn-success btn-lg" href="/workouts/new" >Add New Workout</a>
</div>

<% workouts.forEach(function(workout){ %> 
  <% if ( count == 0 ) { %>
    <div class="form-row">
  <% } %> 
  <div class="col-4">
      <div class="card text-center">
              <div class="card-header">
                  <h4> <%= workout.type %> </h4> 
              </div>
              <div class="card-body py-0">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Time: <%= workout.time %> </li>
                    <li class="list-group-item">Weight: <%= workout.weight %> </li>
                    <li class="list-group-item">Repetions: <%= workout.repetions %> </li>
                  </ul>
                  <a class="btn btn-primary my-2 btn-lg" href="/workouts/<%= workout._id %>">Show</a>
              </div>
              <img class="card-img-top img-thumbnail" src="../images/<%= GetImageByWorkoutType(workout.type) %>" alt="Card image cap"> 
              <div class="card-footer text-muted">
                  <%= workout.date %> 
              </div>
      </div>
  </div>
  <% count += 1 %>
  <% if ( count == 3 ) { %>
    <% count = 0 %> 
    </div>
  <% } %>
<% }) %> 


<% include partials/footer %>
