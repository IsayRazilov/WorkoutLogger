<% include partials/header %>
<link rel="stylesheet" href="/stylesheets/workout.css">


<div class="container">
    <div class="form-row">
          <div class="col">
              <div class="card text-center col-sm-4 mx-auto">
                      <div class="card-header">
                          <h4> <%= workout.type %> </h4> 
                      </div>
                      <div class="card-body py-0">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Time: <%= workout.time %> </li>
                            <li class="list-group-item">Weight: <%= workout.weight %> </li>
                            <li class="list-group-item">Repetions: <%= workout.repetions %> </li>
                          </ul>
                          <div class="form-row my-2">
                              <div class="col">
                                    <a class="btn btn-primary btn-lg" href ="/workouts/<%=workout._id%>/edit"> Edit </a>
                              </div>
                              <div class="col">
                                    <form action="/workouts/<%=workout._id%>?_method=DELETE" method="post">
                                        <button class="btn btn-danger btn-lg"> Delete </button>
                                    </form>
                              </div>
                          </div>

                      </div>
                      <!-- <img class="card-img-top" src="login.jpg" alt="Card image cap"> -->
                      <div class="card-footer text-muted">
                            <%= workout.date %> 
                      </div>

              </div>
          </div>
    </div>
</div>
<% include partials/footer %>
